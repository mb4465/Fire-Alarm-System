    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            >
            <ImageView
                android:id="@+id/ivBattery"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="128dp"
                android:src="@drawable/bat_6"
                />
            <ImageView
                android:id="@+id/ivSound"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sound"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Zone 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/zone1Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zone 1"
                            android:textSize="18sp"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginBottom="8dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            >
                            <ImageView
                                android:id="@+id/zone1StatusImage"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/good"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/zone1StatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NORMAL"
                            android:textSize="16sp"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Zone 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/zone2Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zone 2"
                            android:textSize="18sp"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginBottom="8dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            >
                            <ImageView
                                android:id="@+id/zone2StatusImage"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/fire"
                                />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/zone2StatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FIRE"
                            android:textSize="16sp"
                            android:textColor="?android:textColorPrimary"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Zone 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/zone3Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
