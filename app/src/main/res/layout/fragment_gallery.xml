<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change PIN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="?android:textColorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Old PIN"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="?android:textColorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/et_old_pin_digit1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"/>

        <EditText
            android:id="@+id/et_old_pin_digit2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"/>

        <EditText
            android:id="@+id/et_old_pin_digit3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"/>
        <EditText
            android:id="@+id/et_old_pin_digit4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New PIN"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="?android:textColorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/et_new_pin_digit1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/et_new_pin_digit2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"
            />

        <EditText
            android:id="@+id/et_new_pin_digit3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"
            />
        <EditText
            android:id="@+id/et_new_pin_digit4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm New PIN"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="?android:textColorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">
        <EditText
            android:id="@+id/et_confirm_pin_digit1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"/>

        <EditText
            android:id="@+id/et_confirm_pin_digit2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"
            />

        <EditText
            android:id="@+id/et_confirm_pin_digit3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:textColor="?android:textColorPrimary"/>
        <EditText
            android:id="@+id/et_confirm_pin_digit4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_change_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change PIN"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>